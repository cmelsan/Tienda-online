---
export const prerender = false;
import AdminLayout from '@/layouts/AdminLayout.astro';
---

<AdminLayout title="Crear Nuevo Cupón">
  <div class="max-w-2xl mx-auto">
    <a href="/admin/cupones" class="text-blue-600 hover:text-blue-800 text-sm font-semibold mb-6 inline-block">
      ← Volver a cupones
    </a>

    <div class="bg-white border border-gray-200 p-8">
      <h1 class="text-2xl font-bold text-gray-900 mb-8">Crear Nuevo Cupón</h1>

      <div id="message" class="mb-6 p-4 bg-green-50 border border-green-200 text-green-800 text-sm rounded hidden">
        <span id="messageText"></span>
      </div>

      <div id="error" class="mb-6 p-4 bg-red-50 border border-red-200 text-red-800 text-sm rounded hidden">
        <span id="errorText"></span>
      </div>

      <form id="couponForm" class="space-y-6">
        {/* Código */}
        <div>
          <label class="block text-sm font-bold text-gray-700 uppercase tracking-wider mb-2">
            Código del Cupón *
          </label>
          <input
            type="text"
            name="code"
            placeholder="ej: SUMMER2024"
            class="w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-black"
            required
          />
          <p class="text-xs text-gray-500 mt-1">Se convertirá automáticamente a mayúsculas</p>
        </div>

        {/* Descripción */}
        <div>
          <label class="block text-sm font-bold text-gray-700 uppercase tracking-wider mb-2">
            Descripción
          </label>
          <input
            type="text"
            name="description"
            placeholder="ej: Descuento de verano 2024"
            class="w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-black"
          />
        </div>

        <div class="grid grid-cols-2 gap-4">
          {/* Tipo de Descuento */}
          <div>
            <label class="block text-sm font-bold text-gray-700 uppercase tracking-wider mb-2">
              Tipo de Descuento *
            </label>
            <select
              name="discountType"
              class="w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-black"
              required
            >
              <option value="percentage">Porcentaje (%)</option>
              <option value="fixed">Monto Fijo (€)</option>
            </select>
          </div>

          {/* Valor del Descuento */}
          <div>
            <label class="block text-sm font-bold text-gray-700 uppercase tracking-wider mb-2">
              Valor del Descuento *
            </label>
            <input
              type="number"
              name="discountValue"
              placeholder="ej: 20 o 15.50"
              step="0.01"
              class="w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-black"
              required
            />
          </div>
        </div>

        <div class="grid grid-cols-2 gap-4">
          {/* Monto Mínimo */}
          <div>
            <label class="block text-sm font-bold text-gray-700 uppercase tracking-wider mb-2">
              Compra Mínima (€)
            </label>
            <input
              type="number"
              name="minPurchaseAmount"
              placeholder="0"
              step="0.01"
              class="w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-black"
            />
            <p class="text-xs text-gray-500 mt-1">Dejar en 0 para sin límite mínimo</p>
          </div>

          {/* Descuento Máximo (para porcentaje) */}
          <div>
            <label class="block text-sm font-bold text-gray-700 uppercase tracking-wider mb-2">
              Descuento Máximo (€)
            </label>
            <input
              type="number"
              name="maxDiscountAmount"
              placeholder="Opcional"
              step="0.01"
              class="w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-black"
            />
            <p class="text-xs text-gray-500 mt-1">Solo para descuentos porcentuales</p>
          </div>
        </div>

        <div class="grid grid-cols-2 gap-4">
          {/* Máximo de Usos */}
          <div>
            <label class="block text-sm font-bold text-gray-700 uppercase tracking-wider mb-2">
              Máximo de Usos
            </label>
            <input
              type="number"
              name="maxUses"
              placeholder="Dejar vacío para ilimitado"
              class="w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-black"
            />
          </div>

          {/* Válido Hasta */}
          <div>
            <label class="block text-sm font-bold text-gray-700 uppercase tracking-wider mb-2">
              Válido Hasta
            </label>
            <input
              type="date"
              name="validUntil"
              class="w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-black"
            />
            <p class="text-xs text-gray-500 mt-1">Dejar vacío para sin fecha de expiración</p>
          </div>
        </div>

        {/* Estado */}
        <div class="flex items-center space-x-2">
          <input
            type="checkbox"
            id="isActive"
            name="isActive"
            checked
            class="w-4 h-4 rounded border-gray-300 text-black focus:ring-2 focus:ring-black"
          />
          <label for="isActive" class="text-sm font-bold text-gray-700 uppercase tracking-wider">
            Activar cupón de inmediato
          </label>
        </div>

        {/* Botones */}
        <div class="flex gap-4 pt-6 border-t border-gray-200">
          <button
            type="submit"
            class="flex-1 bg-black text-white py-3 text-sm font-bold uppercase tracking-widest hover:bg-gray-800 transition-colors"
          >
            Crear Cupón
          </button>
          <a
            href="/admin/cupones"
            class="flex-1 bg-gray-200 text-black py-3 text-sm font-bold uppercase tracking-widest hover:bg-gray-300 transition-colors text-center"
          >
            Cancelar
          </a>
        </div>
      </form>
    </div>
  </div>
</AdminLayout>

<script>
  const form = document.getElementById('couponForm') as HTMLFormElement;
  const messageDiv = document.getElementById('message') as HTMLDivElement;
  const errorDiv = document.getElementById('error') as HTMLDivElement;
  const messageText = document.getElementById('messageText') as HTMLSpanElement;
  const errorText = document.getElementById('errorText') as HTMLSpanElement;

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    // Ocultar mensajes previos
    messageDiv.classList.add('hidden');
    errorDiv.classList.add('hidden');

    // Recopilar datos del formulario
    const formData = new FormData(form);
    const data = {
      code: formData.get('code'),
      description: formData.get('description'),
      discountType: formData.get('discountType'),
      discountValue: formData.get('discountValue'),
      maxUses: formData.get('maxUses'),
      minPurchaseAmount: formData.get('minPurchaseAmount'),
      maxDiscountAmount: formData.get('maxDiscountAmount'),
      validUntil: formData.get('validUntil'),
      isActive: (formData.get('isActive') as any) === 'on',
    };

    try {
      const response = await fetch('/api/admin/coupons', {
        method: 'POST',
        credentials: 'include',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data),
      });

      const result = await response.json();

      if (response.ok) {
        messageText.textContent = '✓ Cupón creado exitosamente';
        messageDiv.classList.remove('hidden');
        
        setTimeout(() => {
          window.location.href = '/admin/cupones';
        }, 1500);
      } else {
        errorText.textContent = `✗ ${result.error || 'Error al crear el cupón'}`;
        errorDiv.classList.remove('hidden');
      }
    } catch (error) {
      errorText.textContent = '✗ Error de conexión';
      errorDiv.classList.remove('hidden');
    }
  });
</script>
