---
export const prerender = false;
import AdminLayout from '@/layouts/AdminLayout.astro';
import { supabase } from '@/lib/supabase';

// Fetch brands
const { data: brands, error } = await supabase
  .from('brands')
  .select('*')
  .order('name');
---

<AdminLayout title="Gestión de Marcas">
  <div class="mb-8 flex justify-between items-center">
    <div>
      <h3 class="text-sm font-bold text-gray-500 uppercase tracking-widest">Catálogo</h3>
      <p class="text-xs text-gray-400 mt-1">Administra las marcas y proveedores</p>
    </div>
    <a
      href="/admin/marcas/nueva"
      class="bg-black text-white px-6 py-3 text-xs font-bold uppercase tracking-widest hover:bg-gray-800 transition-colors"
    >
      Nueva Marca
    </a>
  </div>

  <div class="bg-white border border-gray-200">
    <div class="overflow-x-auto">
      <table class="w-full">
        <thead class="bg-gray-50 border-b border-gray-100">
          <tr>
            <th class="text-left py-4 px-6 text-xs font-bold text-gray-500 uppercase tracking-wider">Nombre</th>
            <th class="text-left py-4 px-6 text-xs font-bold text-gray-500 uppercase tracking-wider">Slug</th>
            <th class="text-left py-4 px-6 text-xs font-bold text-gray-500 uppercase tracking-wider">Descripción</th>
            <th class="text-right py-4 px-6 text-xs font-bold text-gray-500 uppercase tracking-wider">Acciones</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-100">
          {brands?.map((brand) => (
            <tr class="hover:bg-gray-50 transition-colors">
              <td class="py-4 px-6">
                <span class="text-sm font-bold text-black">{brand.name}</span>
              </td>
              <td class="py-4 px-6 text-sm font-mono text-gray-500">{brand.slug}</td>
              <td class="py-4 px-6 text-sm text-gray-600 max-w-xs truncate">{brand.description}</td>
              <td class="py-4 px-6 text-right space-x-2">
                <a
                  href={`/admin/marcas/editar/${brand.id}`}
                  class="text-xs font-bold text-blue-600 hover:text-blue-800 uppercase tracking-wider"
                >
                  Editar
                </a>
                {/* Delete is handled usually via form or API, for now basic link or we can implement client-side delete */}
              </td>
            </tr>
          ))}
          {(!brands || brands.length === 0) && (
            <tr>
              <td colspan="4" class="py-8 text-center text-gray-500 text-sm">
                No hay marcas registradas.
              </td>
            </tr>
          )}
        </tbody>
      </table>
    </div>
  </div>
</AdminLayout>
