---
interface Props {
  label: string;
  name: string;
  type?: 'text' | 'email' | 'password' | 'number' | 'tel' | 'url' | 'date' | 'time' | 'datetime-local' | 'month' | 'week' | 'color' | 'file' | 'hidden' | 'checkbox' | 'radio' | 'range' | 'search';
  placeholder?: string;
  required?: boolean;
  value?: string | number;
  error?: string;
  class?: string;
  min?: string | number;
  max?: string | number;
  step?: string | number;
  variant?: 'default' | 'minimal' | 'elegant';
}

const {
  label,
  name,
  type = 'text',
  placeholder = '',
  required = false,
  value = '',
  error = '',
  class: className = '',
  min,
  max,
  step,
  variant = 'default',
} = Astro.props;

const inputVariants = {
  default: 'w-full px-4 py-3.5 border border-gray-border bg-white text-black placeholder-gray-medium focus:ring-2 focus:ring-beauty-red/20 focus:border-black transition-all duration-300 text-sm',
  minimal: 'w-full px-0 py-3 border-0 border-b border-gray-border bg-transparent text-black placeholder-gray-medium focus:ring-0 focus:border-black transition-all duration-300 text-sm',
  elegant: 'w-full px-5 py-4 border border-gray-border bg-white-off text-black placeholder-gray-medium focus:ring-2 focus:ring-beauty-red/10 focus:border-beauty-red focus:bg-white transition-all duration-300 text-sm',
};
---

<div class={`space-y-2 ${className}`}>
  <label for={name} class="block text-[11px] font-semibold text-gray-dark uppercase tracking-widest">
    {label}
    {required && <span class="text-beauty-red ml-0.5">*</span>}
  </label>
  <input
    type={type}
    id={name}
    name={name}
    value={value}
    placeholder={placeholder}
    required={required}
    min={min}
    max={max}
    step={step}
    class={inputVariants[variant]}
  />
  {error && (
    <p class="text-xs text-beauty-red flex items-center gap-1.5">
      <svg class="w-3.5 h-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
      {error}
    </p>
  )}
</div>
</div>
