---
import Card from '@/components/ui/Card.astro';
import WishlistButton from '@/components/islands/WishlistButton';
import { formatPrice } from '@/lib/utils';
import type { Product } from '@/lib/supabase';

interface Props {
  product: any;
  fallbackImage?: string;
}

const { product, fallbackImage } = Astro.props;
let imageUrl = product.images?.[0];

// Si la imagen es un placeholder roto o no existe, usar el fallback de categoría
if (!imageUrl || imageUrl.includes('placeholder')) {
  imageUrl = fallbackImage || '/placeholder-product.jpg';
}
---

<Card variant="flat">
  <div class="relative group h-full flex flex-col overflow-hidden rounded-lg border border-gray-100 bg-white transition-all duration-500 hover:shadow-2xl hover:border-gray-200">
    
    <!-- Image Container with Overlay -->
    <div class="relative overflow-hidden bg-gradient-to-br from-white-cream to-white aspect-square">
      <!-- Discount Badge - Enhanced -->
      {product.discount > 0 && (
        <div class="absolute top-4 left-4 z-20 flex items-center justify-center rounded-lg bg-gradient-to-r from-beauty-red to-rose-600 text-white font-bold text-sm shadow-lg transform transition-transform group-hover:scale-110">
          <div class="px-3 py-1.5">
            <span class="text-xs">DESCUENTO</span>
            <br />
            <span class="text-lg font-bold">-{product.discount}%</span>
          </div>
        </div>
      )}

      <!-- Wishlist Button - Enhanced -->
      <div class="absolute top-4 right-4 z-20 transform transition-all duration-300 opacity-0 group-hover:opacity-100">
        <WishlistButton client:load productId={product.id} productName={product.name} />
      </div>

      <a href={`/productos/${product.slug}`} class="block">
        <!-- Product Image -->
        <img
          src={imageUrl}
          alt={product.name}
          class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
          loading="lazy"
          onerror={`this.onerror=null; this.src='${fallbackImage || '/placeholder-product.jpg'}'`}
        />
      </a>

      <!-- Overlay Gradient on Hover -->
      <div class="absolute inset-0 bg-black/0 group-hover:bg-black/5 transition-colors duration-300" />
    </div>

    <!-- Product Info Container -->
    <div class="flex-1 flex flex-col p-5 space-y-3">
      <!-- Brand Badge -->
      {product.brand && (
        <div class="inline-block w-fit">
          <p class="text-[10px] font-semibold text-white bg-black/80 px-3 py-1 rounded uppercase tracking-widest">
            {product.brand}
          </p>
        </div>
      )}
      
      <!-- Product Name -->
      <a href={`/productos/${product.slug}`} class="block">
        <h3 class="font-semibold text-sm text-black group-hover:text-beauty-red transition-colors duration-300 line-clamp-2 leading-snug min-h-[40px] text-balance">
          {product.name}
        </h3>
      </a>

      <!-- Spacer -->
      <div class="flex-1" />

      <!-- Price Section - Enhanced -->
      <div class="space-y-2 border-t border-gray-100 pt-3">
        {product.discount > 0 ? (
          <div class="space-y-1">
            <p class="text-xs text-gray-400 line-through font-medium">
              {formatPrice(product.price)}
            </p>
            <p class="text-xl font-bold text-beauty-red tracking-tight">
              {formatPrice(product.discountedPrice)}
            </p>
            <p class="text-[10px] text-green-600 font-semibold uppercase tracking-wider">
              Ahorras {formatPrice(product.price - product.discountedPrice)}
            </p>
          </div>
        ) : (
          <p class="text-xl font-bold text-black tracking-tight">
            {formatPrice(product.price)}
          </p>
        )}
      </div>

      <!-- Stock Status -->
      <div class="flex items-center justify-between pt-2">
        {product.stock > 0 ? (
          <span class="text-[10px] text-green-600 font-bold uppercase tracking-wider bg-green-50 px-2 py-1 rounded">
            ✓ En stock ({product.stock} disponibles)
          </span>
        ) : (
          <span class="text-[10px] text-beauty-red font-bold uppercase tracking-wider bg-red-50 px-2 py-1 rounded">
            ✗ Agotado
          </span>
        )}
      </div>

      <!-- CTA Button -->
      <a href={`/productos/${product.slug}`} class="mt-3 pt-3 border-t border-gray-100 block">
        <div class="flex items-center justify-center gap-2 py-2 text-[11px] font-bold text-white bg-black rounded-lg uppercase tracking-widest transition-all duration-300 hover:bg-black/90 hover:gap-3">
          Ver Detalles
          <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </div>
      </a>
    </div>
  </div>
</Card>
