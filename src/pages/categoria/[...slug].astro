---
import PublicLayout from '@/layouts/PublicLayout.astro';
import ProductCard from '@/components/product/ProductCard.astro';
import ProductFilters from '@/components/product/ProductFilters';
import { supabase } from '@/lib/supabase';

export async function getStaticPaths() {
  const { data: categories } = await supabase.from('categories').select('slug');
  return categories?.map((cat) => ({
    params: { slug: cat.slug },
  })) || [];
}

const { slug } = Astro.params;
const [parentCategorySlug, subCategorySlug] = (slug || '').split('/');

// 1. Define Subcategories Map for Side Filters
const SUBCATEGORIES: Record<string, { id: string; name: string }[]> = {
    'maquillaje': [
        { id: 'rostro', name: 'Rostro' },
        { id: 'labios', name: 'Labios' },
        { id: 'ojos', name: 'Ojos' },
        { id: 'cejas', name: 'Cejas' },
        { id: 'paletas', name: 'Paletas de Maquillaje' },
        { id: 'brochas', name: 'Brochas y Pinceles' }
    ],
    'cabello': [
        { id: 'champu', name: 'Champ√∫' },
        { id: 'acondicionador', name: 'Acondicionador' },
        { id: 'mascarilla', name: 'Mascarilla' },
        { id: 'tratamiento', name: 'Tratamientos' },
        { id: 'fijacion', name: 'Fijaci√≥n y Acabado' }
    ],
    'cuerpo': [
        { id: 'hidratacion', name: 'Hidrataci√≥n' },
        { id: 'exfoliante', name: 'Exfoliante' },
        { id: 'bano', name: 'Ba√±o y Ducha' },
        { id: 'solar', name: 'Protecci√≥n Solar' }
    ],
    'perfumes': [
        { id: 'mujer', name: 'Para Ella' },
        { id: 'hombre', name: 'Para √âl' },
        { id: 'unisex', name: 'Unisex' },
        { id: 'hogar', name: 'Hogar' }
    ]
};

// 2. Fetch Parent Category
const { data: category } = await supabase
  .from('categories')
  .select('*')
  .eq('slug', parentCategorySlug)
  .single();

if (!category) {
  return Astro.redirect('/404');
}

// 3. Filter Params
const searchParams = Astro.url.searchParams;
const minPrice = parseInt(searchParams.get('min_price') || '0');
const maxPrice = parseInt(searchParams.get('max_price') || '500'); 
const selectedBrandIds = searchParams.get('brands')?.split(',').filter(Boolean) || [];
// Get selected categories from URL OR from subCategorySlug (if routed via /category/subcategory)
const urlSelectedCategories = searchParams.get('categories')?.split(',').filter(Boolean) || [];
const activeSubCats = subCategorySlug ? [subCategorySlug, ...urlSelectedCategories] : urlSelectedCategories;

const sortOption = searchParams.get('sort') || 'newest';

// 4. Build Query
let query = supabase
  .from('products')
  .select('*, brand:brands(name, id)')
  .eq('category_id', category.id);

// A. Filter by Brand
if (selectedBrandIds.length > 0) {
    query = query.in('brand_id', selectedBrandIds);
}

// B. Filter by Subcategory 
// Note: Since we don't have a subcategory column, we replicate the "Search by Name/Desc" logic
// B. Filter by Subcategory 
// Now using real 'subcategory_id' column or slug lookup
if (activeSubCats.length > 0) {
    // We need to resolve slugs to IDs if we are filtering by URL slugs
    // Or if activeSubCats contains slugs. 
    // Optimization: filtering by IDs is better, but URL has slugs.
    // We can do a subquery or fetch IDs first.
    // Let's assume activeSubCats are SLUGS from the URL.
    
    // We need to find the UUIDs for these slugs
    const { data: subCatIds } = await supabase
        .from('subcategories')
        .select('id')
        .in('slug', activeSubCats);
        
    if (subCatIds && subCatIds.length > 0) {
        const ids = subCatIds.map(s => s.id);
         query = query.in('subcategory_id', ids);
    } else {
        // If no matching subcats found (maybe invalid slugs), show nothing or ignore?
        // Let's force zero results to be safe if provided slugs don't exist
        query = query.eq('id', '00000000-0000-0000-0000-000000000000'); 
    }
}
// Special Case: If we are on a Subcategory Page (e.g. /categoria/maquillaje/rostro)
if (subCategorySlug) {
    const { data: currentSubPage } = await supabase
        .from('subcategories')
        .select('id')
        .eq('slug', subCategorySlug)
        .eq('category_id', category.id)
        .single();
        
    if (currentSubPage) {
        query = query.eq('subcategory_id', currentSubPage.id);
    }
}

// C. Price
if (minPrice > 0) query = query.gte('price', minPrice * 100);
if (maxPrice < 500) query = query.lte('price', maxPrice * 100);

// D. Sort
if (sortOption === 'price_asc') query = query.order('price', { ascending: true });
else if (sortOption === 'price_desc') query = query.order('price', { ascending: false });
else query = query.order('created_at', { ascending: false });

const { data: products } = await query;
const displayProducts = products || [];

// 4.5 Fetch Offers Settings
const { data: offersSettingData } = await supabase
  .from('app_settings')
  .select('value')
  .eq('key', 'offers_enabled')
  .single();

const offersEnabled = offersSettingData?.value === true;

// 4.6 Fetch Featured Offers if enabled
let featuredOffers: any[] = [];
if (offersEnabled) {
  const { data: offersData } = await supabase
    .from('app_settings')
    .select('value')
    .eq('key', 'featured_offers')
    .single();
  
  if (offersData?.value) {
    featuredOffers = offersData.value;
  }
}

// 4.7 Add discount info to products if offers are enabled
const productsWithDiscounts = displayProducts.map(product => {
  const offer = featuredOffers.find(o => o.id === product.id);
  return {
    ...product,
    discount: offer?.discount || 0,
    discountedPrice: offer ? Math.round(product.price * (1 - offer.discount / 100)) : 0
  };
});

// 5. Fetch Brands for Sidebar
const { data: allBrands } = await supabase.from('brands').select('id, name').order('name'); 

// 6. Get Available Subcategories for Sidebar
// 6. Get Available Subcategories for Sidebar
// Ensure we use lowercase for map lookup
const availableSubcats = SUBCATEGORIES[parentCategorySlug?.toLowerCase()] || [];

// Breadcrumbs
const breadcrumbs = [
  { label: 'Inicio', href: '/' },
  { label: 'Productos', href: '/productos' }, // Added to match user expectation
  { label: category.name, href: `/categoria/${category.slug}` },
];
if (subCategorySlug) breadcrumbs.push({ label: subCategorySlug.replace(/-/g, ' '), href: '#' });
---

<PublicLayout title={`${category.name} | √âCLAT`} description={category.description}>
    {/* Premium Header Area - Modern Design */}
    <div class="relative bg-gradient-to-b from-black via-gray-900 to-black overflow-hidden min-h-[450px] lg:min-h-[500px] flex items-center">
        {/* Animated Background Elements */}
        <div class="absolute top-0 right-0 w-96 h-96 bg-beauty-red/10 rounded-full blur-3xl -mr-48 -mt-48" />
        <div class="absolute bottom-0 left-1/2 w-80 h-80 bg-rose-600/5 rounded-full blur-3xl -ml-40 -mb-40" />
        <div class="absolute top-1/2 left-0 w-72 h-72 bg-beauty-red/5 rounded-full blur-3xl -ml-36" />
        
        <div class="max-w-[1920px] mx-auto px-8 sm:px-12 lg:px-16 w-full flex flex-col md:flex-row items-center justify-between gap-12 relative z-10 py-12 md:py-0">
            <div class="max-w-3xl space-y-8 flex-1">
                 {/* Breadcrumb Navigation */}
                 <nav class="flex text-xs text-gray-400 uppercase tracking-widest space-x-2 font-medium">
                    {breadcrumbs.map((crumb, index) => (
                        <div class="flex items-center group">
                            {index > 0 && <span class="mx-2 text-gray-600">/</span>}
                            <a href={crumb.href} class="hover:text-beauty-red transition-all duration-300 group-hover:translate-x-0.5">
                                {crumb.label}
                            </a>
                        </div>
                    ))}
                </nav>
                
                {/* Category Title */}
                <div class="space-y-4">
                    <div class="flex items-center gap-3">
                        <div class="w-1.5 h-10 bg-gradient-to-b from-beauty-red to-rose-600"></div>
                        <h1 class="text-6xl lg:text-7xl font-sans font-black text-white uppercase tracking-tight leading-tight">
                            {category.name}
                        </h1>
                    </div>
                </div>
                
                {/* Category Description */}
                <p class="text-gray-300 text-lg font-light leading-relaxed max-w-2xl">
                    {category.description || `Descubre nuestra exclusiva colecci√≥n de ${category.name.toLowerCase()}. Productos premium seleccionados para ti.`}
                </p>

                {/* CTA Button */}
                <div class="pt-4 flex flex-col sm:flex-row items-start gap-3">
                    <a href="#grid" class="inline-flex items-center gap-2 bg-beauty-red hover:bg-rose-600 text-white px-8 py-3 text-xs font-bold uppercase tracking-widest transition-all duration-300 hover:gap-3 rounded-lg">
                        ‚Üì Explorar colecci√≥n
                    </a>
                    <button 
                        onclick="document.getElementById('mobile-filters').classList.remove('hidden')"
                        class="hidden sm:hidden lg:hidden md:flex items-center gap-2 bg-gray-800 hover:bg-gray-700 text-white px-8 py-3 text-xs font-bold uppercase tracking-widest transition-all duration-300 rounded-lg"
                    >
                        üîç Filtrar
                    </button>
                </div>
            </div>

            {/* Decorative Element */}
            <div class="hidden lg:flex items-center justify-center flex-1 relative">
                <div class="w-72 h-72 bg-gradient-to-r from-beauty-red/20 to-rose-600/20 rounded-3xl blur-2xl" />
            </div>
        </div>
    </div>

    <div class="max-w-[1920px] mx-auto px-4 sm:px-6 lg:px-12 py-16 lg:py-20">
        <div class="flex flex-col lg:flex-row gap-12 lg:gap-20">
            
        {/* Sidebar - Modern Card Design */}
        <aside class="w-full lg:w-72 hidden lg:block">
            <div class="sticky top-32">
                {/* Mobile Filters Toggle - Styled Better */}
                <div 
                    class="lg:hidden mb-4 p-4 bg-white border border-gray-200 rounded-lg cursor-pointer hover:shadow-md transition-shadow flex items-center justify-between hover:bg-gray-50"
                    onclick="document.getElementById('mobile-filters').classList.toggle('hidden')"
                >
                    <div class="flex items-center gap-2">
                        <svg class="w-5 h-5 text-beauty-red" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z" />
                        </svg>
                        <span class="font-bold uppercase tracking-widest text-sm text-black">Filtros</span>
                    </div>
                    <svg class="w-5 h-5 text-gray-600 transition-transform" id="filter-chevron" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                    </svg>
                </div>
                
                <div id="mobile-filters" class="hidden lg:block space-y-6">
                    {/* Reuse ProductFilters component */}
                    <ProductFilters
                        client:load
                        minPriceObj={0}
                        maxPriceObj={500}
                        currentMinPrice={minPrice}
                        currentMaxPrice={maxPrice}
                        brands={allBrands || []}
                        categories={!subCategorySlug ? availableSubcats : []} // Only show Category filters on Main Page
                        selectedBrands={selectedBrandIds}
                        selectedCategories={activeSubCats}
                    />
                </div>
            </div>
        </aside>

            {/* Grid - Main Content Area */}
            <div class="flex-1">
                 {/* Toolbar - Enhancedstyle */}
                 <div id="grid" class="flex flex-col sm:flex-row sm:items-center justify-between mb-12 p-6 bg-gradient-to-r from-gray-50 to-gray-100 rounded-xl border border-gray-200 gap-4 hover:shadow-md transition-shadow">
                    <div class="flex items-center gap-3">
                        <div class="w-1 h-6 bg-gradient-to-b from-beauty-red to-rose-600 rounded-full"></div>
                        <p class="text-sm text-gray-700 font-semibold">
                            <span class="text-black font-bold text-lg">{productsWithDiscounts.length}</span> 
                            <span class="ml-2 text-gray-600">producto{productsWithDiscounts.length !== 1 ? 's' : ''}</span>
                        </p>
                    </div>
                    
                    <div class="flex flex-col sm:flex-row items-start sm:items-center gap-4">
                        <label class="text-xs font-bold uppercase tracking-widest text-gray-700 whitespace-nowrap">üìä Ordenar por:</label>
                        <select 
                            class="text-sm bg-white border border-gray-300 rounded-lg px-4 py-2.5 focus:outline-none focus:ring-2 focus:ring-beauty-red focus:border-transparent cursor-pointer font-medium text-gray-700 hover:border-beauty-red transition-all"
                            onchange="const url = new URL(window.location); url.searchParams.set('sort', this.value); window.location.href = url.toString();"
                        >
                            <option value="newest" selected={sortOption === 'newest'}>Lo m√°s nuevo</option>
                            <option value="price_asc" selected={sortOption === 'price_asc'}>Precio: Bajo a Alto</option>
                            <option value="price_desc" selected={sortOption === 'price_desc'}>Precio: Alto a Bajo</option>
                        </select>
                    </div>
                </div>

                {displayProducts.length > 0 ? (
                    <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 gap-4 sm:gap-6 lg:gap-8">
                        {productsWithDiscounts.map(product => (
                             <ProductCard 
                                product={{
                                    ...product, 
                                    brand: product.brand?.name || '√âCLAT'
                                }} 
                                fallbackImage={`/assets/products/${category.slug === 'maquillaje' ? 'makeup-default.png' : 'body-default.png'}`} 
                            />
                        ))}
                    </div>
                ) : (
                    <div class="py-32 text-center rounded-2xl border-2 border-dashed border-gray-200 bg-gradient-to-b from-gray-50 to-white">
                        <div class="flex justify-center mb-6">
                            <div class="w-24 h-24 bg-gray-100 rounded-full flex items-center justify-center">
                                <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                            </div>
                        </div>
                        <h3 class="text-2xl font-black uppercase tracking-widest mb-3 text-gray-900">Sin Resultados</h3>
                        <p class="text-gray-600 mb-8 max-w-lg mx-auto text-base leading-relaxed">No encontramos productos que coincidan con tu selecci√≥n. Intenta ajustar los filtros o explorar otras categor√≠as.</p>
                        <button 
                            onclick="window.location.href=window.location.pathname"
                            class="inline-flex items-center gap-2 bg-gradient-to-r from-beauty-red to-rose-600 text-white px-10 py-4 text-xs font-bold uppercase tracking-widest hover:shadow-lg hover:from-rose-600 hover:to-beauty-red transition-all rounded-lg"
                        >
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                            </svg>
                            Limpiar filtros
                        </button>
                    </div>
                )}
            </div>
        </div>
    </div>
</PublicLayout>
