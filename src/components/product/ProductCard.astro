---
import Card from '@/components/ui/Card.astro';
import { formatPrice } from '@/lib/utils';
import type { Product } from '@/lib/supabase';

interface Props {
  product: any;
  fallbackImage?: string;
}

const { product, fallbackImage } = Astro.props;
let imageUrl = product.images?.[0];

// Si la imagen es un placeholder roto o no existe, usar el fallback de categoría
if (!imageUrl || imageUrl.includes('placeholder')) {
  imageUrl = fallbackImage || '/placeholder-product.jpg';
}
---

<Card variant="flat">
  <div class="relative group" x-data="{ 
      isWishlisted: false,
      loading: false,
      init() {
         // Check if already in global list
         if (window.userWishlist && window.userWishlist.includes('${product.id}')) {
             this.isWishlisted = true;
         }
         // Listen for global ready event (if component loads before fetch finishes)
         window.addEventListener('wishlist-ready', () => {
             if (window.userWishlist && window.userWishlist.includes('${product.id}')) {
                 this.isWishlisted = true;
             }
         });
      },
      async toggle() {
          if (this.loading) return;
          this.loading = true;
          
          // Optimistic UI
          this.isWishlisted = !this.isWishlisted;

          try {
             const res = await fetch('/api/wishlist', {
                 method: 'POST',
                 headers: {'Content-Type': 'application/json'},
                 body: JSON.stringify({ productId: '${product.id}' })
             });
             
             if (!res.ok) {
                 // Revert if failed (e.g. not logged in)
                 this.isWishlisted = !this.isWishlisted;
                 if (res.status === 401) window.location.href = '/login';
             } else {
                 // Update global list just in case
                 if (this.isWishlisted) {
                     window.userWishlist = [...(window.userWishlist || []), '${product.id}'];
                 } else {
                     window.userWishlist = (window.userWishlist || []).filter(id => id !== '${product.id}');
                 }
             }
          } catch (e) {
             this.isWishlisted = !this.isWishlisted;
          } finally {
             this.loading = false;
          }
      }
  }">
    
    <!-- Wishlist Button - Refined -->
    <button 
      @click.prevent="toggle()"
      class="absolute top-3 right-3 z-20 w-9 h-9 flex items-center justify-center rounded-full bg-white/90 backdrop-blur-sm text-gray-medium hover:text-beauty-red transition-all duration-300 shadow-soft opacity-0 group-hover:opacity-100 focus:opacity-100 hover:scale-110"
      :class="{ '!text-beauty-red !opacity-100': isWishlisted }"
      aria-label="Añadir a lista de deseos"
    >
      <svg 
        class="w-[18px] h-[18px] transition-transform duration-300" 
        :class="{ 'scale-110': isWishlisted }"
        :fill="isWishlisted ? 'currentColor' : 'none'" 
        stroke="currentColor" 
        viewBox="0 0 24 24"
      >
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
      </svg>
    </button>

    <a href={`/productos/${product.slug}`} class="block">
      <!-- Product Image - Premium styling -->
      <div class="aspect-square overflow-hidden bg-white-cream">
        <img
          src={imageUrl}
          alt={product.name}
          class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
          loading="lazy"
          onerror={`this.onerror=null; this.src='${fallbackImage || '/placeholder-product.jpg'}'`}
        />
      </div>

      <!-- Product Info - Refined spacing and typography -->
      <div class="p-5 space-y-2.5 bg-white">
        <!-- Brand if available -->
        {product.brand && (
          <p class="text-[10px] font-medium text-gray-medium uppercase tracking-widest">
            {product.brand}
          </p>
        )}
        
        <h3 class="font-medium text-sm text-black group-hover:text-beauty-red transition-colors duration-300 line-clamp-2 leading-snug min-h-[40px]">
          {product.name}
        </h3>
        
        <div class="flex items-end justify-between pt-1">
          <div>
            {product.discount > 0 ? (
              <div class="flex flex-col gap-1">
                <p class="text-xs text-gray-500 line-through">
                  {formatPrice(product.price)}
                </p>
                <p class="text-lg font-semibold text-beauty-red tracking-tight">
                  {formatPrice(product.discountedPrice)}
                </p>
              </div>
            ) : (
              <p class="text-lg font-semibold text-black tracking-tight">
                {formatPrice(product.price)}
              </p>
            )}
          </div>
          
          {product.stock > 0 ? (
            <span class="text-[10px] text-gray-medium font-medium uppercase tracking-wider">En stock</span>
          ) : (
            <span class="text-[10px] text-beauty-red font-semibold uppercase tracking-wider">Agotado</span>
          )}
        </div>
        
        <!-- CTA - Elegant underline style -->
        <div class="pt-2 opacity-60 group-hover:opacity-100 transition-opacity duration-300">
          <span class="text-[11px] font-medium text-black uppercase tracking-widest relative inline-block after:content-[''] after:absolute after:bottom-0 after:left-0 after:w-full after:h-px after:bg-black">
            Ver detalles
          </span>
        </div>
      </div>
    </a>
  </div>
</Card>
