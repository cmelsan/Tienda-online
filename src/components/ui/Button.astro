---
interface Props {
  variant?: 'primary' | 'secondary' | 'outline' | 'ghost' | 'elegant';
  size?: 'sm' | 'md' | 'lg';
  type?: 'button' | 'submit' | 'reset';
  class?: string;
  href?: string;
}

const {
  variant = 'primary',
  size = 'md',
  type = 'button',
  class: className = '',
  href,
} = Astro.props;

const baseStyles = 'inline-flex items-center justify-center font-medium transition-all duration-300 ease-elegant focus:outline-none focus-visible:ring-2 focus-visible:ring-offset-2 uppercase tracking-widest disabled:opacity-50 disabled:cursor-not-allowed';

const variants = {
  primary: 'bg-black text-white hover:bg-black-soft active:scale-[0.98] shadow-button hover:shadow-elegant focus-visible:ring-black',
  secondary: 'bg-beauty-red text-white hover:bg-beauty-pink active:scale-[0.98] shadow-button hover:shadow-elegant focus-visible:ring-beauty-red',
  outline: 'border border-black text-black hover:bg-black hover:text-white active:scale-[0.98] focus-visible:ring-black',
  ghost: 'text-black hover:bg-gray-light active:scale-[0.98] focus-visible:ring-gray-dark',
  elegant: 'bg-transparent text-black border-b border-black hover:border-beauty-red hover:text-beauty-red focus-visible:ring-beauty-red',
};

const sizes = {
  sm: 'px-5 py-2.5 text-[10px]',
  md: 'px-8 py-3.5 text-xs',
  lg: 'px-12 py-4 text-sm',
};

const classes = `${baseStyles} ${variants[variant]} ${sizes[size]} ${className}`;
---

{href ? (
  <a href={href} class={classes}>
    <slot />
  </a>
) : (
  <button type={type} class={classes}>
    <slot />
  </button>
)}
