---
export const prerender = false;
import AdminLayout from '@/layouts/AdminLayout.astro';
import { supabase } from '@/lib/supabase';

let message = '';
let error = '';

if (Astro.request.method === 'POST') {
  const formData = await Astro.request.formData();
  
  const code = formData.get('code') as string;
  const description = formData.get('description') as string;
  const discountType = formData.get('discountType') as string;
  const discountValue = parseFloat(formData.get('discountValue') as string);
  const maxUses = formData.get('maxUses') ? parseInt(formData.get('maxUses') as string) : null;
  const minPurchaseAmount = parseFloat(formData.get('minPurchaseAmount') as string) || 0;
  const maxDiscountAmount = formData.get('maxDiscountAmount') 
    ? parseFloat(formData.get('maxDiscountAmount') as string) * 100 
    : null;
  const validUntil = formData.get('validUntil') || null;
  const isActive = formData.get('isActive') === 'on';

  // Validación
  if (!code || !discountValue) {
    error = 'El código y el valor de descuento son requeridos';
  } else {
    // Convertir a centavos si es tipo fijo
    const finalDiscountValue = discountType === 'fixed' ? discountValue * 100 : discountValue;

    const { data: newCoupon, error: insertError } = await supabase
      .from('coupons')
      .insert([
        {
          code: code.toUpperCase(),
          description: description || null,
          discount_type: discountType,
          discount_value: finalDiscountValue,
          max_uses: maxUses,
          min_purchase_amount: minPurchaseAmount * 100,
          max_discount_amount: maxDiscountAmount,
          is_active: isActive,
          valid_until: validUntil ? new Date(validUntil).toISOString() : null,
        }
      ])
      .select();

    if (insertError) {
      error = `Error: ${insertError.message}`;
    } else {
      message = 'Cupón creado exitosamente';
      // Redirect después de 2 segundos
      setTimeout(() => {
        window.location.href = '/admin/cupones';
      }, 1500);
    }
  }
}
---

<AdminLayout title="Crear Nuevo Cupón">
  <div class="max-w-2xl mx-auto">
    <a href="/admin/cupones" class="text-blue-600 hover:text-blue-800 text-sm font-semibold mb-6 inline-block">
      ← Volver a cupones
    </a>

    <div class="bg-white border border-gray-200 p-8">
      <h1 class="text-2xl font-bold text-gray-900 mb-8">Crear Nuevo Cupón</h1>

      {message && (
        <div class="mb-6 p-4 bg-green-50 border border-green-200 text-green-800 text-sm rounded">
          ✓ {message}
        </div>
      )}

      {error && (
        <div class="mb-6 p-4 bg-red-50 border border-red-200 text-red-800 text-sm rounded">
          ✗ {error}
        </div>
      )}

      <form method="POST" class="space-y-6">
        {/* Código */}
        <div>
          <label class="block text-sm font-bold text-gray-700 uppercase tracking-wider mb-2">
            Código del Cupón *
          </label>
          <input
            type="text"
            name="code"
            placeholder="ej: SUMMER2024"
            class="w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-black"
            required
          />
          <p class="text-xs text-gray-500 mt-1">Se convertirá automáticamente a mayúsculas</p>
        </div>

        {/* Descripción */}
        <div>
          <label class="block text-sm font-bold text-gray-700 uppercase tracking-wider mb-2">
            Descripción
          </label>
          <input
            type="text"
            name="description"
            placeholder="ej: Descuento de verano 2024"
            class="w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-black"
          />
        </div>

        <div class="grid grid-cols-2 gap-4">
          {/* Tipo de Descuento */}
          <div>
            <label class="block text-sm font-bold text-gray-700 uppercase tracking-wider mb-2">
              Tipo de Descuento *
            </label>
            <select
              name="discountType"
              class="w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-black"
              required
            >
              <option value="percentage">Porcentaje (%)</option>
              <option value="fixed">Monto Fijo (€)</option>
            </select>
          </div>

          {/* Valor del Descuento */}
          <div>
            <label class="block text-sm font-bold text-gray-700 uppercase tracking-wider mb-2">
              Valor del Descuento *
            </label>
            <input
              type="number"
              name="discountValue"
              placeholder="ej: 20 o 15.50"
              step="0.01"
              class="w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-black"
              required
            />
          </div>
        </div>

        <div class="grid grid-cols-2 gap-4">
          {/* Monto Mínimo */}
          <div>
            <label class="block text-sm font-bold text-gray-700 uppercase tracking-wider mb-2">
              Compra Mínima (€)
            </label>
            <input
              type="number"
              name="minPurchaseAmount"
              placeholder="0"
              step="0.01"
              class="w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-black"
            />
            <p class="text-xs text-gray-500 mt-1">Dejar en 0 para sin límite mínimo</p>
          </div>

          {/* Descuento Máximo (para porcentaje) */}
          <div>
            <label class="block text-sm font-bold text-gray-700 uppercase tracking-wider mb-2">
              Descuento Máximo (€)
            </label>
            <input
              type="number"
              name="maxDiscountAmount"
              placeholder="Opcional"
              step="0.01"
              class="w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-black"
            />
            <p class="text-xs text-gray-500 mt-1">Solo para descuentos porcentuales</p>
          </div>
        </div>

        <div class="grid grid-cols-2 gap-4">
          {/* Máximo de Usos */}
          <div>
            <label class="block text-sm font-bold text-gray-700 uppercase tracking-wider mb-2">
              Máximo de Usos
            </label>
            <input
              type="number"
              name="maxUses"
              placeholder="Dejar vacío para ilimitado"
              class="w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-black"
            />
          </div>

          {/* Válido Hasta */}
          <div>
            <label class="block text-sm font-bold text-gray-700 uppercase tracking-wider mb-2">
              Válido Hasta
            </label>
            <input
              type="date"
              name="validUntil"
              class="w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-black"
            />
            <p class="text-xs text-gray-500 mt-1">Dejar vacío para sin fecha de expiración</p>
          </div>
        </div>

        {/* Estado */}
        <div class="flex items-center space-x-2">
          <input
            type="checkbox"
            id="isActive"
            name="isActive"
            checked
            class="w-4 h-4 rounded border-gray-300 text-black focus:ring-2 focus:ring-black"
          />
          <label for="isActive" class="text-sm font-bold text-gray-700 uppercase tracking-wider">
            Activar cupón de inmediato
          </label>
        </div>

        {/* Botones */}
        <div class="flex gap-4 pt-6 border-t border-gray-200">
          <button
            type="submit"
            class="flex-1 bg-black text-white py-3 text-sm font-bold uppercase tracking-widest hover:bg-gray-800 transition-colors"
          >
            Crear Cupón
          </button>
          <a
            href="/admin/cupones"
            class="flex-1 bg-gray-200 text-black py-3 text-sm font-bold uppercase tracking-widest hover:bg-gray-300 transition-colors text-center"
          >
            Cancelar
          </a>
        </div>
      </form>
    </div>
  </div>
</AdminLayout>

<script>
  // Auto-redirect después de crear
  setTimeout(() => {
    const successMsg = document.querySelector('[class*="green-50"]');
    if (successMsg) {
      window.location.href = '/admin/cupones';
    }
  }, 1500);
</script>
