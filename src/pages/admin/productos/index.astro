---
export const prerender = false;

import AdminLayout from '@/layouts/AdminLayout.astro';
import { supabase } from '@/lib/supabase';
import { formatPrice } from '@/lib/utils';

// Fetch all products with category info
const { data: products } = await supabase
  .from('products')
  .select('*, category:categories(*)')
  .order('created_at', { ascending: false });
---

<AdminLayout title="Gestión de Productos">
  <div class="mb-8 flex justify-between items-center">
    <div>
      <h3 class="text-sm font-bold text-gray-500 uppercase tracking-widest">Inventario</h3>
      <p class="text-xs text-gray-400 mt-1">Gestiona todos tus productos</p>
    </div>
    <a
      href="/admin/productos/nuevo"
      class="bg-black text-white px-6 py-3 text-xs font-bold uppercase tracking-widest hover:bg-gray-800 transition-colors"
    >
      Nuevo Producto
    </a>
  </div>

  {products && products.length > 0 ? (
    <div class="bg-white border border-gray-200 rounded-lg overflow-hidden">
      <div class="overflow-x-auto">
        <table class="w-full">
          <thead class="bg-gray-50 border-b border-gray-100">
            <tr>
              <th class="text-left py-3 px-4 text-xs font-bold text-gray-700 uppercase tracking-wider">Producto</th>
              <th class="text-left py-3 px-4 text-xs font-bold text-gray-700 uppercase tracking-wider">Categoría</th>
              <th class="text-left py-3 px-4 text-xs font-bold text-gray-700 uppercase tracking-wider">Precio</th>
              <th class="text-left py-3 px-4 text-xs font-bold text-gray-700 uppercase tracking-wider">Stock</th>
              <th class="text-left py-3 px-4 text-xs font-bold text-gray-700 uppercase tracking-wider">Acciones</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-100">
            {products.map((product) => (
              <tr class="hover:bg-gray-50 transition-colors">
                <td class="py-3 px-4">
                  <div class="flex items-center gap-3">
                    {product.images && product.images[0] && (
                      <img
                        src={product.images[0]}
                        alt={product.name}
                        class="w-10 h-10 rounded object-cover"
                      />
                    )}
                    <div class="flex-1">
                      <p class="text-xs font-bold text-gray-900">{product.name}</p>
                      <p class="text-xs text-gray-400">{product.slug}</p>
                    </div>
                  </div>
                </td>
                <td class="py-3 px-4 text-xs text-gray-600">
                  {product.category?.name || '-'}
                </td>
                <td class="py-3 px-4 text-xs font-bold text-gray-900">
                  {formatPrice(product.price)}
                </td>
                <td class="py-3 px-4">
                  <span class={`inline-block text-xs font-semibold ${
                    product.stock > 10
                      ? 'text-green-700'
                      : product.stock > 0
                      ? 'text-yellow-700'
                      : 'text-red-700'
                  }`}>
                    {product.stock} unidades
                  </span>
                </td>
                <td class="py-3 px-4 text-xs space-x-2 flex gap-2">
                  <a
                    href={`/admin/productos/${product.id}`}
                    class="text-blue-600 hover:text-blue-800 font-semibold"
                  >
                    Editar
                  </a>
                  <a
                    href={`/productos/${product.slug}`}
                    target="_blank"
                    class="text-gray-600 hover:text-gray-800 font-semibold"
                  >
                    Ver
                  </a>
                </td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>
    </div>
  ) : (
    <div class="bg-white border border-gray-200 p-12 text-center">
      <p class="text-sm text-gray-600">No hay productos disponibles</p>
      <a
        href="/admin/productos/nuevo"
        class="mt-4 inline-block bg-black text-white px-6 py-3 text-xs font-bold uppercase tracking-widest hover:bg-gray-800 transition-colors"
      >
        Crear Producto
      </a>
    </div>
  )}
</AdminLayout>
