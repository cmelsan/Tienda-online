---
export const prerender = false; // SSR

import AdminLayout from '@/layouts/AdminLayout.astro';
import AdminOrderRow from '@/components/admin/AdminOrderRow';
import { supabase } from '@/lib/supabase';

// 1. Auth Check (Admin Layout handles rudimentary check, but good to be safe)
const { data: { user } } = await supabase.auth.getUser();
// In a real app, strict server-side admin check here.

// 2. Fetch Orders
let query = supabase
    .from('orders')
    .select(`
        *,
        items:order_items (
            quantity,
            price_at_purchase,
            product:products (name)
        )
    `)
    .order('created_at', { ascending: false });

const { data: orders, error } = await query;

if (error) {
    console.error('Error fetching orders:', error);
}

const stats = {
    total: orders?.length || 0,
    paid: orders?.filter(o => o.status === 'paid').length || 0,
    pending: orders?.filter(o => o.status === 'awaiting_payment').length || 0,
    shipped: orders?.filter(o => o.status === 'shipped').length || 0,
    delivered: orders?.filter(o => o.status === 'delivered').length || 0,
};
---

<AdminLayout title="Gestión de Pedidos">
    <div class="mb-8 flex flex-col md:flex-row md:items-center justify-between gap-4">
        <div>
            <h1 class="text-3xl font-bold uppercase tracking-tight text-black">Pedidos</h1>
            <p class="text-gray-500 mt-1">Gestiona el flujo de ventas y estados de envío.</p>
        </div>
        <div class="flex gap-4">
            <div class="bg-white px-4 py-2 border border-gray-200 shadow-sm rounded-md">
                <span class="block text-xs font-bold text-gray-400 uppercase">Total</span>
                <span class="text-lg font-bold text-black">{stats.total}</span>
            </div>
            <div class="bg-green-50 px-4 py-2 border border-green-100 shadow-sm rounded-md">
                <span class="block text-xs font-bold text-green-600 uppercase">Pagados</span>
                <span class="text-lg font-bold text-green-700">{stats.paid}</span>
            </div>
            <div class="bg-yellow-50 px-4 py-2 border border-yellow-100 shadow-sm rounded-md">
                <span class="block text-xs font-bold text-yellow-600 uppercase">Pendientes</span>
                <span class="text-lg font-bold text-yellow-700">{stats.pending}</span>
            </div>
            <div class="bg-blue-50 px-4 py-2 border border-blue-100 shadow-sm rounded-md">
                <span class="block text-xs font-bold text-blue-600 uppercase">Enviados</span>
                <span class="text-lg font-bold text-blue-700">{stats.shipped}</span>
            </div>
            <div class="bg-purple-50 px-4 py-2 border border-purple-100 shadow-sm rounded-md">
                <span class="block text-xs font-bold text-purple-600 uppercase">Entregados</span>
                <span class="text-lg font-bold text-purple-700">{stats.delivered}</span>
            </div>
        </div>
    </div>

    <div class="bg-white border border-gray-200 rounded-lg overflow-hidden shadow-sm">
        <div class="overflow-x-auto">
            <table class="w-full">
                <thead class="bg-gray-50 border-b border-gray-100">
                    <tr>
                        <th class="text-left py-4 px-6 text-xs font-bold text-gray-500 uppercase tracking-wider">ID</th>
                        <th class="text-left py-4 px-6 text-xs font-bold text-gray-500 uppercase tracking-wider">Fecha</th>
                        <th class="text-left py-4 px-6 text-xs font-bold text-gray-500 uppercase tracking-wider">Cliente</th>
                        <th class="text-left py-4 px-6 text-xs font-bold text-gray-500 uppercase tracking-wider">Resumen</th>
                        <th class="text-left py-4 px-6 text-xs font-bold text-gray-500 uppercase tracking-wider">Total</th>
                        <th class="text-left py-4 px-6 text-xs font-bold text-gray-500 uppercase tracking-wider">Estado</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-100">
                    {orders?.map((order) => (
                        <AdminOrderRow client:visible order={order} />
                    ))}
                    {(!orders || orders.length === 0) && (
                         <tr>
                            <td colspan="6" class="py-12 text-center text-gray-500">
                                No se encontraron pedidos.
                            </td>
                        </tr>
                    )}
                </tbody>
            </table>
        </div>
    </div>
</AdminLayout>
