---
import PublicLayout from '@/layouts/PublicLayout.astro';
import ProductGallery from '@/components/product/ProductGallery.astro';
import ProductCard from '@/components/product/ProductCard.astro';
import WishlistButton from '@/components/islands/WishlistButton';
import AddToCartButton from '@/components/islands/AddToCartButton';
import ReviewsList from '@/components/reviews/ReviewsList';
import ReviewForm from '@/components/reviews/ReviewForm';
import { supabase } from '@/lib/supabase';
import { formatPrice, getStockLabel } from '@/lib/utils';

export async function getStaticPaths() {
  const { data: products } = await supabase
    .from('products')
    .select('slug');

  return products?.map((product) => ({
    params: { slug: product.slug },
  })) || [];
}

const { slug } = Astro.params;

// Fetch product data
const { data: product } = await supabase
  .from('products')
  .select('*, category:categories(*)')
  .eq('slug', slug)
  .single();

if (!product) {
  return Astro.redirect('/404');
}

// Fetch featured offers
const { data: offersSettingData } = await supabase
  .from('app_settings')
  .select('value')
  .eq('key', 'offers_enabled')
  .single();

const offersEnabled = offersSettingData?.value === true;

let productDiscount = 0;
let productDiscountedPrice = product.price;

if (offersEnabled) {
  const { data: offersData } = await supabase
    .from('app_settings')
    .select('value')
    .eq('key', 'featured_offers')
    .single();
  
  if (offersData?.value) {
    const featuredOffers = offersData.value;
    const offer = featuredOffers.find((o: any) => o.id === product.id);
    if (offer) {
      productDiscount = offer.discount || 0;
      productDiscountedPrice = Math.round(product.price * (1 - productDiscount / 100));
    }
  }
}

// Map category slug to fallback image for related products
const getFallbackImage = (categorySlug: string) => {
  return `/assets/products/${
    categorySlug === 'maquillaje' ? 'makeup-default.png' :
    categorySlug === 'cabello' ? 'hair-default.png' :
    categorySlug === 'cuerpo' ? 'body-default.png' :
    categorySlug === 'perfumes' ? 'perfume-default.png' :
    'makeup-default.png'
  }`;
};

// Fetch related products
const { data: relatedProducts } = await supabase
  .from('products')
  .select('*')
  .eq('category_id', product.category_id)
  .neq('id', product.id)
  .limit(4);
---

<PublicLayout
  title={`${product.name} - ÉCLAT`}
  description={product.description}
>
  <!-- Product Detail Section -->
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8 lg:py-12">
    
    <!-- Breadcrumbs -->
    <nav class="text-xs text-gray-500 mb-6 uppercase tracking-widest font-medium">
      <a href="/" class="hover:text-black transition-colors">Inicio</a>
      <span class="mx-2">/</span>
      <a href={`/categoria/${product.category.slug}`} class="hover:text-black transition-colors">{product.category.name}</a>
    </nav>

    <!-- Main Product Grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 lg:gap-10">
      
      <!-- Left Column: Product Images -->
      <div class="md:col-span-1">
        <div class="sticky top-20">
          {product.images && product.images.length > 0 ? (
            <ProductGallery images={product.images} productName={product.name} />
          ) : (
            <div class="aspect-square bg-gray-100 flex items-center justify-center text-gray-300 rounded-lg">
              <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
              </svg>
            </div>
          )}
        </div>
      </div>

      <!-- Right Column: Product Info -->
      <div class="md:col-span-2 space-y-6">
        
        <!-- Brand -->
        {product.brand && (
          <div class="text-xs font-semibold text-gray-600 uppercase tracking-widest">
            {product.brand.name}
          </div>
        )}

        <!-- Title -->
        <h1 class="text-3xl lg:text-4xl font-bold text-black leading-tight">
          {product.name}
        </h1>

        <!-- Wishlist Button -->
        <div class="flex items-center gap-4">
          <WishlistButton client:load productId={product.id} productName={product.name} />
        </div>

        <!-- Price -->
        <div class="flex items-center gap-3 flex-wrap">
          {productDiscount > 0 ? (
            <>
              <span class="text-2xl font-bold text-beauty-red">
                {formatPrice(productDiscountedPrice)}
              </span>
              <span class="text-lg text-gray-400 line-through">
                {formatPrice(product.price)}
              </span>
              <span class="ml-auto text-xs font-bold text-beauty-red bg-rose-50 px-3 py-1 rounded-full">
                -{productDiscount}% Rebaja
              </span>
            </>
          ) : (
            <span class="text-2xl font-bold text-black">
              {formatPrice(product.price)}
            </span>
          )}
        </div>

        <!-- Stock Status -->
        <div class="flex items-center gap-2">
          {product.stock > 0 ? (
            <>
              <div class="w-2 h-2 bg-green-500 rounded-full"></div>
              <span class="text-sm text-gray-600">
                {product.stock > 5 ? 'En Stock' : `Solo ${product.stock} disponibles`}
              </span>
            </>
          ) : (
            <>
              <div class="w-2 h-2 bg-red-500 rounded-full"></div>
              <span class="text-sm text-red-600 font-medium">Agotado</span>
            </>
          )}
        </div>

        <!-- Divider -->
        <div class="h-px bg-gray-200"></div>

        <!-- Description -->
        <div class="text-sm text-gray-700 leading-relaxed">
          {product.description}
        </div>

        <!-- Add to Cart -->
        <div class="pt-4">
          <AddToCartButton 
            product={{
              ...product,
              discount: productDiscount,
              discountedPrice: productDiscountedPrice,
              is_flash_sale: product.is_flash_sale || false,
              flash_sale_discount: product.flash_sale_discount || 0
            }} 
            client:visible 
          />
        </div>

        <!-- Divider -->
        <div class="h-px bg-gray-200"></div>

        <!-- Trust Badges -->
        <div class="grid grid-cols-2 gap-4">
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
            <span class="text-xs font-medium text-gray-700">Envío Gratis +39€</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
            </svg>
            <span class="text-xs font-medium text-gray-700">Devolución Gratis</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Accordions Section -->
    <div class="mt-12 border-t border-gray-200 pt-8 max-w-2xl">
      {[
        { title: 'Detalles del Producto', content: product.description },
        { title: 'Envío y Devoluciones', content: 'Envío estándar gratuito para pedidos mayores a 39€. Tiempo de entrega: 2-3 días laborales. Devoluciones gratuitas durante 30 días.' },
        { title: 'Información de Marca', content: product.brand?.name ? `Productos de ${product.brand.name}. Toda nuestra gama seleccionada con cuidado para garantizar la máxima calidad.` : 'Información de marca disponible.' }
      ].map((item) => (
        <details class="group border-b border-gray-200">
          <summary class="flex items-center justify-between py-4 cursor-pointer list-none">
            <span class="text-sm font-bold uppercase tracking-widest text-black group-hover:text-beauty-red transition-colors">
              {item.title}
            </span>
            <span class="text-lg font-light transform transition-transform duration-300 group-open:rotate-45 text-gray-400">+</span>
          </summary>
          <div class="pb-4 text-sm text-gray-600 leading-relaxed">
            {item.content}
          </div>
        </details>
      ))}
    </div>
  </div>

  <!-- Reviews Section -->
  <section class="border-t border-gray-200 mt-16 pt-12">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
        {/* Reviews List - 2 columns on large screens */}
        <div class="lg:col-span-2">
          <ReviewsList client:load productId={product.id} />
        </div>

        {/* Review Form - 1 column sidebar on large screens */}
        <div>
          <div class="sticky top-20">
            <ReviewForm client:load productId={product.id} />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Related Products Section -->
  {relatedProducts && relatedProducts.length > 0 && (
    <section class="border-t border-gray-200 mt-16 pt-12">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between mb-8">
          <h2 class="text-2xl lg:text-3xl font-bold text-black">
            Productos Relacionados
          </h2>
          <a href={`/categoria/${product.category.slug}`} class="text-xs font-bold uppercase tracking-widest border-b border-black pb-1 hover:text-beauty-red hover:border-beauty-red transition-colors">
            Ver Categoría →
          </a>
        </div>
        
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 md:gap-6">
          {relatedProducts.map((relatedProduct) => (
            <ProductCard 
              product={{
                ...relatedProduct,
                brand: product.brand?.name || 'ÉCLAT'
              }} 
              fallbackImage={getFallbackImage(product.category.slug)}
            />
          ))}
        </div>
      </div>
    </section>
  )}
</PublicLayout>
