---
export const prerender = false; // SSR

import AdminLayout from '@/layouts/AdminLayout.astro';
import { supabase } from '@/lib/supabase';
import { formatPrice } from '@/lib/utils';

// Fetch all products with category info
const { data: products } = await supabase
  .from('products')
  .select('*, category:categories(*)')
  .order('created_at', { ascending: false });
---

<AdminLayout title="Gestión de Productos">
  <div class="mb-6 flex items-center justify-between">
    <h1 class="text-2xl font-serif text-noir-900">Productos</h1>
    <a
      href="/admin/productos/nuevo"
      class="px-6 py-3 bg-noir-900 text-cream-50 rounded-lg font-medium hover:bg-noir-800 transition-colors inline-flex items-center space-x-2"
    >
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
      </svg>
      <span>Nuevo Producto</span>
    </a>
  </div>

  {products && products.length > 0 ? (
    <div class="bg-white rounded-lg shadow-soft overflow-hidden">
      <table class="w-full">
        <thead class="bg-cream-100">
          <tr>
            <th class="text-left py-4 px-6 text-sm font-medium text-noir-700">Producto</th>
            <th class="text-left py-4 px-6 text-sm font-medium text-noir-700">Categoría</th>
            <th class="text-left py-4 px-6 text-sm font-medium text-noir-700">Precio</th>
            <th class="text-left py-4 px-6 text-sm font-medium text-noir-700">Stock</th>
            <th class="text-right py-4 px-6 text-sm font-medium text-noir-700">Acciones</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-noir-100">
          {products.map((product) => (
            <tr class="hover:bg-cream-50 transition-colors">
              <td class="py-4 px-6">
                <div class="flex items-center space-x-4">
                  <img
                    src={product.images[0] || '/placeholder-product.jpg'}
                    alt={product.name}
                    class="w-12 h-12 rounded object-cover bg-cream-100"
                  />
                  <div>
                    <p class="font-medium text-noir-900">{product.name}</p>
                    <p class="text-sm text-noir-600">{product.slug}</p>
                  </div>
                </div>
              </td>
              <td class="py-4 px-6 text-sm text-noir-700">
                {product.category?.name || 'Sin categoría'}
              </td>
              <td class="py-4 px-6 text-sm font-medium text-noir-900">
                {formatPrice(product.price)}
              </td>
              <td class="py-4 px-6">
                <span class={`inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium ${
                  product.stock > 10
                    ? 'bg-green-100 text-green-800'
                    : product.stock > 0
                    ? 'bg-yellow-100 text-yellow-800'
                    : 'bg-rose-100 text-rose-800'
                }`}>
                  {product.stock} unidades
                </span>
              </td>
              <td class="py-4 px-6 text-right space-x-3">
                <a
                  href={`/productos/${product.slug}`}
                  target="_blank"
                  class="text-sm text-noir-600 hover:text-gold-600 font-medium"
                >
                  Ver
                </a>
                <a
                  href={`/admin/productos/${product.id}`}
                  class="text-sm text-gold-600 hover:text-gold-700 font-medium"
                >
                  Editar
                </a>
              </td>
            </tr>
          ))}
        </tbody>
      </table>
    </div>
  ) : (
    <div class="bg-white rounded-lg shadow-soft p-12 text-center">
      <svg class="w-16 h-16 text-noir-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
      </svg>
      <p class="text-lg text-noir-700 mb-2">No hay productos</p>
      <p class="text-noir-500 mb-6">Comienza añadiendo tu primer producto</p>
      <a
        href="/admin/productos/nuevo"
        class="inline-flex items-center space-x-2 px-6 py-3 bg-noir-900 text-cream-50 rounded-lg font-medium hover:bg-noir-800 transition-colors"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        <span>Crear Producto</span>
      </a>
    </div>
  )}
</AdminLayout>
