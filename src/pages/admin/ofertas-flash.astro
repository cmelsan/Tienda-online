---
import AdminLayout from '@/layouts/AdminLayout.astro';
import FlashSaleManager from '@/components/admin/FlashSaleManager';
---

<AdminLayout title="Ofertas Flash" description="Gestiona las ofertas flash de tus productos">
  <div class="max-w-7xl mx-auto">
    <div class="mb-8">
      <h1 class="text-sm font-bold uppercase tracking-widest text-black mb-1">Ofertas Flash</h1>
      <p class="text-xs text-gray-400">Configura descuentos rápidos y temporales. Activa/desactiva la sección desde Configuración.</p>
    </div>

    <FlashSaleManager client:load />
  </div>
</AdminLayout>
