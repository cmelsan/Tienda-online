<script>
  import { cartCount } from '@/stores/cart';
  import { supabase } from '@/lib/supabase';

  // Check Session for Header
  (async () => {
    const { data: { session } } = await supabase.auth.getSession();
    const authLink = document.getElementById('auth-link') as HTMLAnchorElement;
    const authText = document.getElementById('auth-text');

    if (session && authLink && authText) {
      if (location.pathname.startsWith('/admin')) {
         // Don't change link if on admin pages, or handle differently
      } else {
        authLink.href = '/mi-cuenta';
        authText.textContent = 'Mi Cuenta';
      }
    }
  })();

  // Update cart count badge
  cartCount.subscribe((count) => {
    const badge = document.getElementById('cart-count-badge');
    if (badge) {
      if (count > 0) {
        badge.textContent = count.toString();
        badge.style.display = 'flex';
      } else {
        badge.style.display = 'none';
      }
    }
  });

  // Cart trigger
  document.getElementById('cart-trigger')?.addEventListener('click', () => {
    window.dispatchEvent(new CustomEvent('toggle-cart'));
  });

  // Newsletter Form
  const newsletterForm = document.getElementById('newsletter-form') as HTMLFormElement;
  const newsletterMsg = document.getElementById('newsletter-message');

  if (newsletterForm) {
      newsletterForm.addEventListener('submit', async (e) => {
          e.preventDefault();
          const formData = new FormData(newsletterForm);
          const email = formData.get('email');
          const btn = newsletterForm.querySelector('button');

          if(btn) btn.innerHTML = 'Enviando...';
          
          try {
              const res = await fetch('/api/newsletter', {
                  method: 'POST',
                  headers: {'Content-Type': 'application/json'},
                  body: JSON.stringify({ email })
              });
              
              const data = await res.json();
              
              if(newsletterMsg) {
                  newsletterMsg.textContent = data.message;
                  newsletterMsg.classList.remove('hidden');
                  newsletterMsg.className = res.ok ? 'text-xs mt-2 text-green-400' : 'text-xs mt-2 text-red-400';
              }
              
              if(res.ok) newsletterForm.reset();

          } catch (err) {
              if(newsletterMsg) {
                   newsletterMsg.textContent = 'Error al enviar. Inténtalo de nuevo.';
                   newsletterMsg.classList.remove('hidden');
                   newsletterMsg.className = 'text-xs mt-2 text-red-400';
              }
          } finally {
              if(btn) btn.innerHTML = 'Suscribirse';
          }
      });
  }

  // Wishlist Logic - Global Setup
  (async () => {
     try {
       // Only if user is logged in (session check handles 401 silently)
       const res = await fetch('/api/wishlist');
       if (res.ok) {
         window.userWishlist = await res.json();
         // Dispatch event to notify components
         window.dispatchEvent(new CustomEvent('wishlist-ready'));
       } else {
         window.userWishlist = [];
       }
     } catch (e) {
       window.userWishlist = [];
     }
  })();
</script>
