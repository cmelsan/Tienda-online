---
interface Props {
  class?: string;
  hover?: boolean;
  variant?: 'default' | 'elevated' | 'flat';
}

const { class: className = '', hover = true, variant = 'default' } = Astro.props;

const variantStyles = {
  default: 'bg-white shadow-card',
  elevated: 'bg-white shadow-soft',
  flat: 'bg-white-off',
};

const hoverStyles = hover ? 'hover:shadow-card-hover hover:-translate-y-1' : '';
const classes = `overflow-hidden transition-all duration-500 ease-elegant ${variantStyles[variant]} ${hoverStyles} ${className}`;
---

<div class={classes}>
  <slot />
</div>
