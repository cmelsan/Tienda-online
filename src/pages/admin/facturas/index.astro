---
export const prerender = false;
import AdminLayout from '@/layouts/AdminLayout.astro';
import { createServerSupabaseClient } from '@/lib/supabase';
import { formatCents, formatDate } from '@/lib/invoices';

const supabase = await createServerSupabaseClient(Astro, true);

const { data: invoices } = await supabase
  .from('invoices')
  .select(`
    id, type, invoice_number, order_id, credit_note_scope,
    total_amount, customer_name, customer_email, issued_at,
    orders!invoices_order_id_fkey ( order_number )
  `)
  .order('issued_at', { ascending: false });

const allInvoices = (invoices as any[]) || [];

// Pedidos pagados que todavía no tienen factura de venta
const invoicedOrderIds = new Set(
  allInvoices.filter(i => i.type === 'invoice').map((i: any) => i.order_id)
);
const { data: paidOrders } = await supabase
  .from('orders')
  .select('id, order_number, created_at, total_amount, guest_email, customer_name')
  .in('status', ['paid', 'shipped', 'delivered', 'return_requested', 'returned', 'refunded'])
  .order('created_at', { ascending: false });

const ordersWithoutInvoice = (paidOrders || []).filter(
  (o: any) => !invoicedOrderIds.has(o.id)
);

// Stats
const salesInvoices  = allInvoices.filter(i => i.type === 'invoice');
const creditNotes    = allInvoices.filter(i => i.type === 'credit_note');
const totalFacturado = salesInvoices.reduce((s: number, i: any) => s + i.total_amount, 0);
const totalAbonado   = creditNotes.reduce((s: number, i: any) => s + Math.abs(i.total_amount), 0);
const neto           = totalFacturado - totalAbonado;

const typeBadge = (type: string) =>
  type === 'invoice'
    ? 'bg-black text-white text-[10px] font-bold uppercase tracking-widest px-2 py-0.5'
    : 'bg-gray-100 text-gray-500 text-[10px] font-bold uppercase tracking-widest px-2 py-0.5';

const typeLabel = (type: string, scope: string | null) => {
  if (type === 'invoice') return 'Factura';
  return scope === 'partial' ? 'Abono parcial' : 'Abono';
};
---

<AdminLayout title="Facturas">
  <!-- Stats -->
  <div class="grid grid-cols-2 sm:grid-cols-4 gap-4 mb-8">
    <div class="bg-black text-white p-5">
      <p class="text-[10px] font-bold uppercase tracking-widest text-gray-400">Total documentos</p>
      <p class="text-3xl font-bold mt-1">{allInvoices.length}</p>
    </div>
    <div class="bg-white border border-gray-200 p-5">
      <p class="text-[10px] font-bold uppercase tracking-widest text-gray-400">Facturado</p>
      <p class="text-3xl font-bold text-black mt-1">{formatCents(totalFacturado)}</p>
    </div>
    <div class="bg-white border border-gray-200 p-5">
      <p class="text-[10px] font-bold uppercase tracking-widest text-gray-400">Abonado</p>
      <p class="text-3xl font-bold text-black mt-1">{formatCents(totalAbonado)}</p>
    </div>
    <div class="bg-white border border-gray-200 p-5">
      <p class="text-[10px] font-bold uppercase tracking-widest text-gray-400">Neto</p>
      <p class="text-3xl font-bold text-black mt-1">{formatCents(neto)}</p>
    </div>
  </div>

  <!-- Header -->
  <div class="mb-6">
    <h3 class="text-sm font-bold uppercase tracking-widest text-black">Documentos contables</h3>
    <p class="text-xs text-gray-400 mt-1">Facturas de venta y facturas de abono generadas automáticamente</p>
  </div>

  <!-- Buscador -->
  <div class="mb-4">
    <div class="relative">
      <svg class="absolute left-4 top-1/2 -translate-y-1/2 w-4 h-4 text-gray-400 pointer-events-none" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-4.35-4.35M17 11A6 6 0 1 1 5 11a6 6 0 0 1 12 0z"/>
      </svg>
      <input
        id="search-facturas"
        type="text"
        placeholder="Buscar por nº factura, nº pedido, cliente..."
        class="w-full pl-11 pr-4 py-3 bg-white border border-gray-200 text-sm placeholder-gray-400 focus:outline-none focus:border-black transition-colors"
      />
    </div>
    <p id="search-count-facturas" class="text-[10px] text-gray-400 mt-2 hidden uppercase tracking-widest"></p>
  </div>

  <!-- Pedidos sin factura -->
  {ordersWithoutInvoice.length > 0 && (
    <div class="mb-8 bg-white border border-gray-200">
      <div class="px-6 py-4 border-b border-gray-100 flex items-center justify-between">
        <div>
          <h4 class="text-xs font-bold uppercase tracking-widest text-black">Pedidos sin factura</h4>
          <p class="text-[10px] text-gray-400 mt-0.5">{ordersWithoutInvoice.length} pedido{ordersWithoutInvoice.length !== 1 ? 's' : ''} pago{ordersWithoutInvoice.length !== 1 ? 's' : ''} sin factura generada</p>
        </div>
        <button
          id="btn-generate-all"
          class="text-[10px] font-bold uppercase tracking-widest bg-black text-white px-4 py-2 hover:bg-pink-500 transition-colors"
        >
          Generar todas
        </button>
      </div>
      <div class="overflow-x-auto">
        <table class="w-full">
          <thead class="bg-gray-50">
            <tr>
              <th class="text-left py-3 px-6 text-[10px] font-bold uppercase tracking-wider text-gray-500">Pedido</th>
              <th class="text-left py-3 px-6 text-[10px] font-bold uppercase tracking-wider text-gray-500">Fecha</th>
              <th class="text-left py-3 px-6 text-[10px] font-bold uppercase tracking-wider text-gray-500">Cliente</th>
              <th class="text-right py-3 px-6 text-[10px] font-bold uppercase tracking-wider text-gray-500">Total</th>
              <th class="text-right py-3 px-6 text-[10px] font-bold uppercase tracking-wider text-gray-500">Acción</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-100">
            {ordersWithoutInvoice.map((order: any) => (
              <tr class="hover:bg-gray-50">
                <td class="py-3 px-6 text-sm font-mono font-bold text-black">#{order.order_number}</td>
                <td class="py-3 px-6 text-sm text-gray-500">{formatDate(order.created_at)}</td>
                <td class="py-3 px-6 text-sm text-gray-600 max-w-[200px] truncate">
                  {order.guest_email || order.customer_name || '—'}
                </td>
                <td class="py-3 px-6 text-right text-sm font-bold text-black">{formatCents(order.total_amount)}</td>
                <td class="py-3 px-6 text-right">
                  <button
                    data-order-id={order.id}
                    data-order-number={order.order_number}
                    class="btn-generate-one text-[10px] font-bold uppercase tracking-widest border border-black text-black px-4 py-2 hover:bg-black hover:text-white transition-colors"
                  >
                    Generar factura
                  </button>
                </td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>
    </div>
  )}

  <!-- Table -->
  <div class="bg-white border border-gray-200">
    <div class="overflow-x-auto">
      <table class="w-full">
        <thead class="bg-black">
          <tr>
            <th class="text-left py-4 px-6 text-[10px] font-bold text-white uppercase tracking-wider">Número</th>
            <th class="text-left py-4 px-6 text-[10px] font-bold text-white uppercase tracking-wider">Tipo</th>
            <th class="text-left py-4 px-6 text-[10px] font-bold text-white uppercase tracking-wider">Pedido</th>
            <th class="text-left py-4 px-6 text-[10px] font-bold text-white uppercase tracking-wider">Cliente</th>
            <th class="text-left py-4 px-6 text-[10px] font-bold text-white uppercase tracking-wider">Fecha</th>
            <th class="text-right py-4 px-6 text-[10px] font-bold text-white uppercase tracking-wider">Importe</th>
            <th class="text-right py-4 px-6 text-[10px] font-bold text-white uppercase tracking-wider">Acciones</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-100">
          {allInvoices.map((inv: any) => (
            <tr
              class="hover:bg-gray-50 transition-colors"
              data-search={`${inv.invoice_number} ${(inv as any).orders?.order_number || ''} ${inv.customer_email || ''} ${inv.customer_name || ''}`.toLowerCase()}
            >
              <td class="py-4 px-6">
                <span class="text-sm font-bold font-mono text-black">{inv.invoice_number}</span>
              </td>
              <td class="py-4 px-6">
                <span class={typeBadge(inv.type)}>
                  {typeLabel(inv.type, inv.credit_note_scope)}
                </span>
              </td>
              <td class="py-4 px-6">
                <span class="text-sm text-gray-600 font-mono">
                  #{(inv as any).orders?.order_number || '—'}
                </span>
              </td>
              <td class="py-4 px-6 text-sm text-gray-600 max-w-[180px] truncate">
                {inv.customer_email || inv.customer_name || '—'}
              </td>
              <td class="py-4 px-6 text-sm text-gray-500">
                {formatDate(inv.issued_at)}
              </td>
              <td class="py-4 px-6 text-right">
                <span class={`text-sm font-bold ${inv.total_amount < 0 ? 'text-red-600' : 'text-black'}`}>
                  {inv.total_amount < 0 ? '-' : ''}{formatCents(inv.total_amount)}
                </span>
              </td>
              <td class="py-4 px-6 text-right">
                <a
                  href={`/admin/facturas/${inv.id}`}
                  target="_blank"
                  class="inline-block text-[10px] font-bold uppercase tracking-widest bg-black text-white px-4 py-2 hover:bg-pink-500 transition-colors"
                >
                  Ver / Imprimir
                </a>
              </td>
            </tr>
          ))}
          {allInvoices.length === 0 && (
            <tr>
              <td colspan="7" class="py-12 text-center text-xs text-gray-400 uppercase tracking-widest">
                No hay documentos contables aún
              </td>
            </tr>
          )}
        </tbody>
      </table>
    </div>
  </div>
</AdminLayout>

<script>
async function generateInvoice(orderId: string, btn: HTMLButtonElement) {
  btn.disabled = true;
  const original = btn.textContent;
  btn.textContent = 'Generando...';

  const res = await fetch('/api/admin/invoices/generate', {
    method: 'POST',
    headers: { 'Content-Type': 'application/json' },
    body: JSON.stringify({ orderId }),
  });
  const data = await res.json();

  if (data.success) {
    btn.textContent = '✓ Generada';
    btn.classList.add('bg-black', 'text-white');
    // Recargar tras 800ms para ver la nueva factura en la tabla
    setTimeout(() => window.location.reload(), 800);
  } else {
    btn.textContent = '✗ Error';
    btn.disabled = false;
    setTimeout(() => { btn.textContent = original!; btn.disabled = false; }, 2000);
  }
}

// Botones individuales
document.querySelectorAll<HTMLButtonElement>('.btn-generate-one').forEach(btn => {
  btn.addEventListener('click', () => {
    const orderId = btn.dataset.orderId!;
    generateInvoice(orderId, btn);
  });
});

// Botón "Generar todas"
document.getElementById('btn-generate-all')?.addEventListener('click', async (e) => {
  const btn = e.currentTarget as HTMLButtonElement;
  btn.disabled = true;
  btn.textContent = 'Generando...';

  const allBtns = document.querySelectorAll<HTMLButtonElement>('.btn-generate-one');
  for (const b of allBtns) {
    const orderId = b.dataset.orderId!;
    await generateInvoice(orderId, b);
    await new Promise(r => setTimeout(r, 200)); // pequeña pausa entre llamadas
  }
});
</script>

<script>
  const searchFacturas = document.getElementById('search-facturas') as HTMLInputElement;
  const countFacturas = document.getElementById('search-count-facturas') as HTMLParagraphElement;
  const invoiceRows = document.querySelectorAll<HTMLTableRowElement>('tbody tr[data-search]');

  searchFacturas?.addEventListener('input', () => {
    const q = searchFacturas.value.toLowerCase().trim();
    let visible = 0;

    invoiceRows.forEach(row => {
      const match = !q || (row.dataset.search || '').includes(q);
      row.style.display = match ? '' : 'none';
      if (match) visible++;
    });

    if (q) {
      countFacturas.textContent = `${visible} documento${visible !== 1 ? 's' : ''} encontrado${visible !== 1 ? 's' : ''}`;
      countFacturas.classList.remove('hidden');
    } else {
      countFacturas.classList.add('hidden');
    }
  });
</script>
