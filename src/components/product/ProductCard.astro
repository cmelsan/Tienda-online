---
import Card from '@/components/ui/Card.astro';
import WishlistButton from '@/components/islands/WishlistButton';
import ProductAddToCart from '@/components/islands/ProductAddToCart';
import ProductRating from '@/components/reviews/ProductRating';
import { formatPrice } from '@/lib/utils';
import type { Product } from '@/lib/supabase';

interface Props {
  product: any;
  fallbackImage?: string;
}

const { product, fallbackImage } = Astro.props;
let imageUrl = product.images?.[0];

// Si la imagen es un placeholder roto o no existe, usar el fallback de categor√≠a
if (!imageUrl || imageUrl.includes('placeholder')) {
  imageUrl = fallbackImage || '/placeholder-product.jpg';
}

// Calculate original price - ALWAYS ensure we get the right original
// Strategy: If discountedPrice is smaller than price, then price IS the original
let originalPrice = product.price;

if (product.discountedPrice && typeof product.discountedPrice === 'number') {
  // If we have a discountedPrice, use the higher value as original
  originalPrice = Math.max(product.price || 0, product.discountedPrice);
  
  // If discountedPrice is lower, it's a discounted price, so original is higher
  // If it's higher or equal, then original is the higher one
  if (product.discountedPrice < originalPrice) {
    // This is already the right way
  } else if (product.discountedPrice > product.price) {
    // discountedPrice is somehow higher, this shouldn't happen
    // but use price as original
    originalPrice = product.price;
  }
}
---

<Card variant="flat">
  <div class="relative group">
    
    <!-- Wishlist Button - Island Component -->
    <div class="absolute top-3 right-3 z-20">
      <WishlistButton client:load productId={product.id} productName={product.name} />
    </div>

    <!-- Discount Badge -->
    {product.discount > 0 && (
      <div class="absolute top-3 left-3 z-20 w-12 h-12 flex items-center justify-center rounded-full bg-beauty-red text-white font-bold text-sm shadow-md">
        -{product.discount}%
      </div>
    )}

    <div>
      <a href={`/productos/${product.slug}`} class="block">
        <!-- Product Image - Premium styling -->
        <div class="aspect-square overflow-hidden bg-white-cream relative">
          <img
            src={imageUrl}
            alt={product.name}
            class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
            loading="lazy"
            onerror={`this.onerror=null; this.src='${fallbackImage || '/placeholder-product.jpg'}'`}
          />
        </div>

        <!-- Product Info - Refined spacing and typography -->
        <div class="p-5 space-y-2.5 bg-white">
          <!-- Brand if available -->
          {product.brand && (
            <p class="text-[10px] font-medium text-gray-medium uppercase tracking-widest">
              {product.brand}
            </p>
          )}
          
          <h3 class="font-medium text-sm text-black group-hover:text-beauty-red transition-colors duration-300 line-clamp-2 leading-snug min-h-[40px]">
            {product.name}
          </h3>
          
          {/* Product Rating */}
          <div class="py-2 border-b border-gray-100">
            <ProductRating client:load productId={product.id} />
          </div>
          
          <div class="flex items-end justify-between pt-1">
            <div>
              {product.discount > 0 ? (
                <div class="flex flex-col gap-1">
                  <p class="text-xs text-gray-500 line-through">
                    {formatPrice(originalPrice)}
                  </p>
                  <p class="text-lg font-semibold text-beauty-red tracking-tight">
                    {formatPrice(product.discountedPrice)}
                  </p>
                </div>
              ) : (
                <p class="text-lg font-semibold text-black tracking-tight">
                  {formatPrice(originalPrice)}
                </p>
              )}
            </div>
            
            {product.stock > 0 ? (
              <span class="text-[10px] text-gray-medium font-medium uppercase tracking-wider">En stock</span>
            ) : (
              <span class="text-[10px] text-beauty-red font-semibold uppercase tracking-wider">Agotado</span>
            )}
          </div>
        </div>
      </a>

      <!-- CTA - Add to Cart Button and Details Link -->
      <div class="px-5 pb-5 bg-white space-y-2 border-t border-gray-100">
        <div class="w-full">
          <ProductAddToCart 
            client:load
            productId={product.id}
            productName={product.name}
            price={originalPrice}
            discountedPrice={product.discountedPrice}
            discount={product.discount}
            stock={product.stock}
            is_flash_sale={product.is_flash_sale}
            flash_sale_discount={product.flash_sale_discount}
            image={imageUrl}
            slug={product.slug}
          />
        </div>
        <a href={`/productos/${product.slug}`} class="opacity-60 hover:opacity-100 transition-opacity duration-300 block">
          <span class="text-[11px] font-medium text-black uppercase tracking-widest relative inline-block after:content-[''] after:absolute after:bottom-0 after:left-0 after:w-full after:h-px after:bg-black">
            Ver detalles
          </span>
        </a>
      </div>
    </div>
  </div>
</Card>
