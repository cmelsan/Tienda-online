---
import PublicLayout from '@/layouts/PublicLayout.astro';
---

<PublicLayout title="Contacto - ÉCLAT">
  <div class="min-h-[80vh] bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
      <div class="mb-12">
        <span class="inline-block text-pink-500 text-[10px] uppercase tracking-[0.3em] mb-4 font-medium">Contáctanos</span>
        <h1 class="text-4xl md:text-5xl font-sans font-bold text-black mb-4">Estamos aquí para ti</h1>
        <p class="text-gray-600 text-lg">¿Tienes preguntas? Ponte en contacto con nuestro equipo.</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-12 mb-12">
        <div>
          <h2 class="text-2xl font-bold text-black mb-6">Información de contacto</h2>
          
          <div class="space-y-6">
            <div>
              <h3 class="font-bold text-black mb-2">Email</h3>
              <a href="mailto:hola@eclatbeauty.com" class="text-pink-500 hover:text-pink-600">hola@eclatbeauty.com</a>
            </div>

            <div>
              <h3 class="font-bold text-black mb-2">Teléfono</h3>
              <a href="tel:+34911234567" class="text-pink-500 hover:text-pink-600">+34 911 23 45 67</a>
            </div>

            <div>
              <h3 class="font-bold text-black mb-2">Horario</h3>
              <p class="text-gray-600">Lunes a Viernes: 10:00 - 20:00</p>
              <p class="text-gray-600">Sábado: 10:00 - 18:00</p>
              <p class="text-gray-600">Domingo: Cerrado</p>
            </div>

            <div>
              <h3 class="font-bold text-black mb-2">Ubicación</h3>
              <p class="text-gray-600">Calle Gran Vía, 25</p>
              <p class="text-gray-600">28013 Madrid, España</p>
            </div>
          </div>
        </div>

        <div>
          <h2 class="text-2xl font-bold text-black mb-6">Envíanos un mensaje</h2>
          <form class="space-y-4" id="contact-form">
            <div>
              <label class="block text-sm font-bold text-gray-700 mb-2">Nombre</label>
              <input type="text" name="name" class="w-full px-4 py-3 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-pink-500" required />
            </div>

            <div>
              <label class="block text-sm font-bold text-gray-700 mb-2">Email</label>
              <input type="email" name="email" class="w-full px-4 py-3 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-pink-500" required />
            </div>

            <div>
              <label class="block text-sm font-bold text-gray-700 mb-2">Asunto</label>
              <input type="text" name="subject" class="w-full px-4 py-3 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-pink-500" required />
            </div>

            <div>
              <label class="block text-sm font-bold text-gray-700 mb-2">Mensaje</label>
              <textarea name="message" rows="5" class="w-full px-4 py-3 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-pink-500" required></textarea>
            </div>

            <button type="submit" class="w-full bg-pink-500 text-white px-8 py-3 rounded hover:bg-pink-600 transition-colors font-bold text-sm uppercase tracking-wider">
              Enviar mensaje
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</PublicLayout>

<script>
  import { showNotification } from '@/lib/notifications';

  const contactForm = document.getElementById('contact-form') as HTMLFormElement;
  if (contactForm) {
    contactForm.addEventListener('submit', async (e) => {
      e.preventDefault();
      // Handle form submission here
      showNotification('Gracias por tu mensaje. Nos pondremos en contacto pronto.', 'success');
      contactForm.reset();
    });
  }
</script>
