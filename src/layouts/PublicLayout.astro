---
import BaseLayout from './BaseLayout.astro';
import CartSlideOver from '@/components/islands/CartSlideOver';

interface Props {
  title: string;
  description?: string;
}

const { title, description } = Astro.props;
---

<BaseLayout title={title} description={description}>
  <!-- Header - MAC Style: Black background, white text -->
  <header class="sticky top-0 z-50 bg-black border-b border-gray-900">
    <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center justify-between h-16">
        <!-- Logo -->
        <a href="/" class="flex items-center group">
          <span class="text-2xl font-bold text-white tracking-wider uppercase group-hover:text-beauty-red transition-colors">
            ÉCLAT
          </span>
        </a>

        <!-- Navigation - MAC Style: Uppercase, spaced -->
        <div class="hidden md:flex items-center space-x-8">
          <a href="/productos" class="text-xs font-semibold text-white hover:text-beauty-red transition-colors uppercase tracking-wider">
            Productos
          </a>
          <a href="/categoria/maquillaje" class="text-xs font-semibold text-white hover:text-beauty-red transition-colors uppercase tracking-wider">
            Maquillaje
          </a>
          <a href="/categoria/cabello" class="text-xs font-semibold text-white hover:text-beauty-red transition-colors uppercase tracking-wider">
            Cabello
          </a>
          <a href="/categoria/cuerpo" class="text-xs font-semibold text-white hover:text-beauty-red transition-colors uppercase tracking-wider">
            Cuerpo
          </a>
          <a href="/categoria/perfumes" class="text-xs font-semibold text-white hover:text-beauty-red transition-colors uppercase tracking-wider">
            Perfumes
          </a>
        </div>

        <!-- Actions -->
        <div class="flex items-center space-x-6">
          <!-- Search -->
          <div class="hidden lg:flex items-center space-x-2 border-b border-transparent hover:border-white pb-0.5 group cursor-pointer transition-colors">
            <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
            <span class="text-xs font-bold text-white uppercase tracking-widest">Buscar</span>
          </div>

          <!-- Store Locator -->
          <a href="#" class="hidden xl:flex items-center space-x-2 group hover:opacity-80 transition-opacity">
            <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <span class="text-xs font-bold text-white uppercase tracking-widest">Localizador de Tiendas</span>
          </a>

          <!-- Login / Account -->
          <div id="auth-container" class="hidden lg:flex items-center space-x-2 group hover:opacity-80 transition-opacity cursor-pointer">
             <a href="/login" id="auth-link" class="flex items-center space-x-2">
                <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
                <span id="auth-text" class="text-xs font-bold text-white uppercase tracking-widest">Iniciar Sesión</span>
             </a>
          </div>

          <!-- Cart Icon -->
          <button
            id="cart-trigger"
            class="relative p-2 text-white hover:text-beauty-red transition-colors group"
            aria-label="Abrir carrito"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
            </svg>
            <span
              id="cart-count-badge"
              class="absolute -top-1 -right-1 bg-beauty-red text-white text-[10px] font-bold rounded-full w-4 h-4 flex items-center justify-center"
              style="display: none;"
            >
              0
            </span>
          </button>
        </div>
      </div>
    </nav>
  </header>

  <!-- Main Content -->
  <main class="min-h-screen">
    <slot />
  </main>

  <!-- Footer - MAC Style: Mega Footer (Newsletter + Columns) -->
  <footer class="bg-black text-white mt-24">
    <!-- Newsletter Section (Full Width, Distinct) -->
    <div class="border-b border-white/20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
        <div class="flex flex-col md:flex-row items-center justify-between gap-8">
          <div class="text-center md:text-left">
            <h3 class="text-2xl font-bold uppercase tracking-widest mb-2 font-head">Mantente al Día</h3>
            <p class="text-gray-400 text-sm tracking-wide font-body">Suscríbete para recibir noticias, lanzamientos y ofertas exclusivas.</p>
          </div>
          <form class="w-full md:w-auto flex flex-col sm:flex-row gap-4 items-stretch">
            <input 
              type="email" 
              placeholder="TU EMAIL" 
              class="w-full md:w-80 bg-transparent border-b border-white text-white placeholder-gray-500 py-2 focus:outline-none focus:border-beauty-red transition-colors uppercase text-sm font-body"
              required
            />
            <button 
              type="submit" 
              class="bg-white text-black px-8 py-2 font-bold uppercase text-xs tracking-widest hover:bg-beauty-red hover:text-white transition-colors"
            >
              Suscribirse
            </button>
          </form>
        </div>
      </div>
    </div>

    <!-- Links Section -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-12">
        <!-- Brand & Social -->
        <div class="col-span-2 md:col-span-1 space-y-8">
          <div>
            <h3 class="text-2xl font-bold mb-4 uppercase tracking-widest font-head">ÉCLAT</h3>
            <p class="text-gray-400 text-sm leading-relaxed font-body">
              Belleza premium y cuidado personal. Arte y sofisticación en cada producto.
            </p>
          </div>
          <div class="flex space-x-6">
            <a href="#" class="text-white hover:text-beauty-red transition-colors" aria-label="Instagram">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/></svg>
            </a>
            <a href="#" class="text-white hover:text-beauty-red transition-colors" aria-label="TikTok">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"/></svg>
            </a>
            <a href="#" class="text-white hover:text-beauty-red transition-colors" aria-label="Pinterest">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 5.079 3.158 9.417 7.618 11.162-.105-.949-.199-2.403.041-3.439.219-.937 1.406-5.957 1.406-5.957s-.359-.72-.359-1.781c0-1.663.967-2.911 2.168-2.911 1.024 0 1.518.769 1.518 1.688 0 1.029-.653 2.567-.992 3.992-.285 1.193.6 2.165 1.775 2.165 2.128 0 3.768-2.245 3.768-5.487 0-2.861-2.063-4.869-5.008-4.869-3.41 0-5.409 2.562-5.409 5.199 0 1.033.394 2.143.889 2.741.099.12.112.225.085.345-.09.375-.293 1.199-.334 1.363-.053.225-.172.271-.399.165-1.495-.69-2.433-2.878-2.433-4.646 0-3.776 2.748-7.252 7.951-7.252 4.173 0 7.41 2.967 7.41 6.923 0 4.135-2.607 7.462-6.233 7.462-1.214 0-2.354-.629-2.758-1.379l-.749 2.848c-.269 1.045-1.004 2.352-1.498 3.146 1.123.345 2.306.535 3.55.535 6.607 0 11.985-5.365 11.985-11.987C23.97 5.367 18.62 0 12.017 0z"/></svg>
            </a>
          </div>
        </div>

        <!-- Atencion al Cliente -->
        <div>
          <h4 class="font-bold mb-6 uppercase text-xs tracking-widest text-white font-head">Atención al Cliente</h4>
          <ul class="space-y-3 text-sm font-body">
            <li><a href="#" class="text-gray-400 hover:text-white transition-colors">Estado del Pedido</a></li>
            <li><a href="#" class="text-gray-400 hover:text-white transition-colors">Envíos y Entregas</a></li>
            <li><a href="#" class="text-gray-400 hover:text-white transition-colors">Devoluciones</a></li>
            <li><a href="#" class="text-gray-400 hover:text-white transition-colors">FAQ</a></li>
            <li><a href="#" class="text-gray-400 hover:text-white transition-colors">Contáctanos</a></li>
          </ul>
        </div>

        <!-- Sobre Nosotros -->
        <div>
          <h4 class="font-bold mb-6 uppercase text-xs tracking-widest text-white font-head">Sobre Nosotros</h4>
          <ul class="space-y-3 text-sm font-body">
            <li><a href="#" class="text-gray-400 hover:text-white transition-colors">Nuestra Historia</a></li>
            <li><a href="#" class="text-gray-400 hover:text-white transition-colors">Carreras</a></li>
            <li><a href="#" class="text-gray-400 hover:text-white transition-colors">Sostenibilidad</a></li>
            <li><a href="#" class="text-gray-400 hover:text-white transition-colors">Compromiso Social</a></li>
          </ul>
        </div>

        <!-- Mi Cuenta -->
        <div>
          <h4 class="font-bold mb-6 uppercase text-xs tracking-widest text-white font-head">Mi Cuenta</h4>
          <ul class="space-y-3 text-sm font-body">
            <li><a href="/admin/login" class="text-gray-400 hover:text-white transition-colors">Iniciar Sesión</a></li>
            <li><a href="#" class="text-gray-400 hover:text-white transition-colors">Crear Cuenta</a></li>
            <li><a href="#" class="text-gray-400 hover:text-white transition-colors">Mis Pedidos</a></li>
            <li><a href="#" class="text-gray-400 hover:text-white transition-colors">Lista de Deseos</a></li>
          </ul>
        </div>
      </div>

      <div class="border-t border-white/20 mt-12 pt-8 text-center text-xs text-gray-500 font-body">
        <p>&copy; {new Date().getFullYear()} ÉCLAT Beauty. Todos los derechos reservados. Diseñado en Madrid.</p>
      </div>
    </div>
  </footer>

  <!-- Cart Slide Over -->
  <CartSlideOver client:load />
</BaseLayout>

<script>
  import { cartCount } from '@/stores/cart';
  import { supabase } from '@/lib/supabase';

  // Check Session for Header
  (async () => {
    const { data: { session } } = await supabase.auth.getSession();
    const authLink = document.getElementById('auth-link') as HTMLAnchorElement;
    const authText = document.getElementById('auth-text');

    if (session && authLink && authText) {
      if (location.pathname.startsWith('/admin')) {
         // Don't change link if on admin pages, or handle differently
      } else {
        authLink.href = '/mi-cuenta';
        authText.textContent = 'Mi Cuenta';
      }
    }
  })();

  // Update cart count badge
  cartCount.subscribe((count) => {
    const badge = document.getElementById('cart-count-badge');
    if (badge) {
      if (count > 0) {
        badge.textContent = count.toString();
        badge.style.display = 'flex';
      } else {
        badge.style.display = 'none';
      }
    }
  });

  // Cart trigger
  document.getElementById('cart-trigger')?.addEventListener('click', () => {
    window.dispatchEvent(new CustomEvent('toggle-cart'));
  });
</script>
